<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ada yang baru"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_notification_red_dot"
        app:layout_constraintStart_toEndOf="@+id/iv_item_notification_red_dot"
        app:layout_constraintTop_toTopOf="@+id/iv_item_notification_red_dot" />

    <ImageView
        android:id="@+id/iv_item_notification_red_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_badge_count" />

    <TextView
        android:id="@+id/tv_item_notification_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:text="Ada acara baru di dekat Alun-alun kidul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_notification_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_notification_title" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_notification_content"
        app:layout_constraintStart_toStartOf="@+id/tv_item_notification_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_notification_content" />

    <TextView
        android:id="@+id/tv_item_notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:text="20-05-20"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_notification_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_item_notification_title"
        app:layout_constraintTop_toTopOf="@+id/tv_item_notification_title" />
</androidx.constraintlayout.widget.ConstraintLayout>